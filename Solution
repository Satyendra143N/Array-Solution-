#include<iostream>
using namespace std;
int main()
{
int x;  //To get size of array
int t=0; //To count the total price of items chef purchased
int soe=0; //sum of price of items to count the price of all items
int r; //Minimum freshness value required to categories that item in fresh
cout<<"Enter the number of items available in store: "<<endl;
cin>>x;
int a[x],b[x];
for(int i=0;i<x;i++)
{
cout<<"Enter the price of each element and their freshness value respectively: "<<endl;
cin>>b[i]>>a[i];
cout<<"Give the value of freshner atleast required: "<<endl;
cin>>r;
}
for(int k=0;k<x;k++)
{
soe+=a[i];}
for(int j=0;j<x;j++)
{
if((a[i]/soe)*100>=r)
{
t+=b[j];
}
}
cout<<"The price of items chef purchased are "<<t;
}
